@page "/user/{userhandle}"
@using global::Shared.Dtos
@using global::Shared.Mapping
@using global::Shared.Model
@inject IHttpClientFactory HttpClientFactory

<PageTitle>User Profile</PageTitle>

@if (user == null)
{
    <p>
        <em>Fetching user...</em>
    </p>
}
else
{
    <h1>@user.DisplayName</h1>

    <p>#@user.Handle</p>
    <p>@user.Email</p>
}

@if (posts == null)
{
    <p>
        <em>Fetching posts...</em>
    </p>
}
else
{
    <table class="table">
        <thead>
        <tr>
            <th>Header</th>
            <th>Date</th>
            <th>Content</th>
        </tr>
        </thead>
        <tbody>
        @foreach (var post in posts)
        {
            <tr>
                <td>@post.Header</td>
                <td>@post.Date?.ToShortDateString()</td>
                <td>@post.Content</td>
            </tr>
        }
        </tbody>
    </table>
}

@code 
{
    [Parameter]
    public string? UserHandle { get; set; }
    
    private List<Post>? posts;
    private User? user;

    protected override async Task OnInitializedAsync()
    {
        var timelineHttp = HttpClientFactory.CreateClient("UserTimelineService");
        var profileHttp = HttpClientFactory.CreateClient("UserProfileService");
        
        posts = (await timelineHttp.GetFromJsonAsync<PostDto[]>($"Timeline/GetPosts?user={UserHandle}") 
                 ?? Enumerable.Empty<PostDto>())
            .Select(dto => dto.ToModel())
            .ToList();
        
        user = (await profileHttp.GetFromJsonAsync<UserDto>($"Profile/GetProfile?user={UserHandle}") 
                 ?? new UserDto())
            .ToModel();
    }
}