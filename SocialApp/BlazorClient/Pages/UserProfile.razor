@page "/profile/{userid}"
@using global::Shared.Dtos
@inject IHttpClientFactory HttpClientFactory

<PageTitle>User Profile</PageTitle>

<h1>User Profile</h1>

<p>Here you can view the profile of a given user.</p>

@if (posts == null)
{
    <p>
        <em>Fetching posts...</em>
    </p>
}
else
{
    <table class="table">
        <thead>
        <tr>
            <th>Header</th>
            <th>Date</th>
            <th>Content</th>
        </tr>
        </thead>
        <tbody>
        @foreach (var post in posts)
        {
            <tr>
                <td>@post.Header</td>
                <td>@post.Date.ToShortDateString()</td>
                <td>@post.Content</td>
            </tr>
        }
        </tbody>
    </table>
}

@code 
{
    [Parameter]
    public string? UserId { get; set; }
    
    private PostDto[]? posts;

    protected override async Task OnInitializedAsync()
    {
        var http = HttpClientFactory.CreateClient("UserTimelineService");
        
        posts = await http.GetFromJsonAsync<PostDto[]>($"Timeline/GetPosts?userId={UserId}");
    }
}